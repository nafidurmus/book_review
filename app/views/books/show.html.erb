<div class="row">

	<div class="col-md-4">

		<%= image_tag @book.book_img.url(:book_show), class: "book-show" %>

	</div>

	<div class="col-md-8">

		<h2><%= @book.title %></h2>
		<h3><%= @book.author %></h3>
		<h4	>Category : <%= @book.category.name %></h4>
		<p><%= @book.description %></p>

	</div>
</div>

<div class="row" >,
	<div class="col-md-4">
		<!-- where the reviews/ratings will go -->
		<%= render @book.reviews %>
		<div>
			<%= link_to "Add review", new_book_review_path(@book)%>
		</div>
	</div>
	
</div>


<%= link_to "home", root_path %>

<% if user_signed_in? %>

	<% if @book.user_id == current_user.id %>
		<%= link_to "edit", edit_book_path(@book) %>
		<%= link_to "delete", book_path(@book), method: :delete, data: { confrm: "are you sure ? "} %>
	<% end %>

<% end %>