<p><%= review.rating %></p>
<p><%= review.comment %></p>

<% if user_signed_in? %>
	<% if review.user_id == current_user.id %>
		<%= link_to "edit", edit_book_review_path(review.book, review) %>
		<%= link_to "delete", book_review_path(review.book, review), method: :delete, data: {confirm: "are u sure ?"} %>
	<% end %>
<% end %>